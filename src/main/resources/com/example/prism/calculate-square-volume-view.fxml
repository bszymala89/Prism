<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <Label text="Square Base Prism Volume" style="-fx-font-size: 20px; -fx-font-weight: bold"/>
    <HBox alignment="CENTER" spacing="5">
        <Label text="side"/>
        <TextField maxWidth="300" fx:id="sideField"/>
        <Label text="cm."/>
    </HBox>
    <Button maxWidth="150" text="Calculate" onAction="#Calculate"/>
    <HBox alignment="CENTER" spacing="5" style="-fx-font-size: 15px; -fx-font-weight: bold">
        <Label fx:id="resultTextLabel" text="Result:"/>
        <Label fx:id="resultLabel" visible="false"/>
    </HBox>
</VBox>